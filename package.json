{
	"name": "ear-monster",
	"packageManager": "pnpm@7.3.0",
	"workspaces": [
		"packages/*",
		"docs"
	],
	"private": false,
	"version": "1.0.0",
	"main": "umd/index.js",
	"typings": "types/index.d.ts",
	"style": "umd/style.css",
	"module": "es/index.js",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"scripts": {
		"demo:dev": "vite",
		"demo:build": "vite build",
		"docs:dev": "pnpm run -C docs dev",
		"docs:build": "pnpm run -C docs build",
		"build:cli": "pnpm  --filter=@ear-monster/cli build",
		"build": "pnpm --filter=@ear-monster/* run build",
		"publish": "changeset publish --access public",
		"release": "release-it",
		"version": "changeset version",
		"preinstall": "npx only-allow pnpm",
		"changeset": "changeset",
		"clear": "rimraf 'packages/*/{lib,node_modules}' && rimraf node_modules"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.1",
		"@changesets/git": "^2.0.0",
		"@ear-monster/constants": "workspace:*",
		"@ear-monster/theme-chalk": "workspace:*",
		"@ear-monster/use": "workspace:*",
		"@ear-monster/utils": "workspace:*",
		"@types/fs-extra": "^11.0.1",
		"@types/node": "^16.18.27",
		"@typescript-eslint/eslint-plugin": "^4.20.0",
		"@vitejs/plugin-vue": "^4.2.3",
		"@vueuse/core": "^10.1.2",
		"esbuild": "^0.18.12",
		"fast-glob": "^3.2.12",
		"fs-extra": "^11.1.1",
		"gray-matter": "^4.0.3",
		"node-sass": "^9.0.0",
		"pug": "^3.0.0",
		"release-it": "^15.10.3",
		"rollup-plugin-visualizer": "^5.9.2",
		"typescript": "^4.1.5",
		"vite-plugin-compression": "^0.5.1",
		"vite-plugin-inspect": "^0.3.11",
		"vite-plugin-progress": "^0.0.7",
		"vite-plugin-sass-dts": "^1.1.20",
		"vitepress": "^0.20.1"
	},
	"author": "chen bing",
	"license": "MIT",
	"config": {
		"commitizen": {
			"path": "git-cz"
		}
	},
	"standard-version": {
		"skip": {
			"tag": true,
			"commit": true,
			"bump": true
		}
	},
	"lint-staged": {
		"*.{js,ts,css,vue,scss}": "prettier  --plugin-search-dir ./node_modules --config .prettierrc --write"
	},
	"dependencies": {
		"vite": "^2.0.2",
		"vite-plugin-restart": "^0.3.1"
	},
	"description": "一些常用的ui组件合集",
	"directories": {
		"doc": "docs",
		"test": "tests"
	},
	"repository": {
		"type": "git",
		"url": "https://gitee.com/duochan/request_cb.git"
	}
}
